generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  name            String
  portfolio_value Float    @default(0)
  leagues         League[]
  trades          Trades[]
}

model League {
  id          String @id @default(uuid())
  invite_code String @unique
  name        String
  Users       User[]
}

model UserStocks {
  id    String @id @default(uuid())
  name  String
  price Float
}

model Trades {
  id          String @id @default(uuid())
  trade_value Float
  price       Float
  quantity    Float

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
