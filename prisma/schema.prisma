generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id
  name            String
  portfolio_value Float    @default(10000)
  trades          Trades[]
  leagues         League[] @relation("LeagueToUser")
}

model League {
  id          String @id @default(uuid())
  invite_code String @unique
  name        String
  Users       User[] @relation("LeagueToUser")
}

model UserStocks {
  id    String @id @default(uuid())
  name  String
  price Float
}

model Trades {
  id          String   @id @default(uuid())
  trade_value Float
  price       Float
  quantity    Float
  ticker      String
  tradeTime   DateTime @default(now())
  userId      String?
  User        User?    @relation(fields: [userId], references: [id])
}

model Market {
  name  String   @id @unique
  price Float
  time  DateTime
}
